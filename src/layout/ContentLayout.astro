---
import BaseLayout from './BaseLayout.astro';

export interface Props {
  seo: {
    title: string;
    description: string;
  };
}

const { seo } = Astro.props;
---

<BaseLayout seo={seo}>
  <div class="container mx-auto max-w-4xl px-4 py-12">
    <div class="prose prose-lg max-w-none">
      <slot />
    </div>
  </div>
</BaseLayout>

<style is:global>
  .prose h1 {
    @apply mb-6 text-4xl font-bold text-slate-800 lg:text-5xl;
  }
  
  .prose h2 {
    @apply mb-4 text-2xl font-semibold text-slate-700;
  }
  
  .prose h3 {
    @apply mb-3 text-xl font-semibold text-slate-700;
  }
  
  .prose h4 {
    @apply mb-2 text-lg font-semibold text-slate-700;
  }
  
  .prose p {
    @apply mb-4 text-lg leading-relaxed text-slate-600;
  }
  
  .prose ul, .prose ol {
    @apply mb-4 text-lg text-slate-600;
  }
  
  .prose li {
    @apply mb-2;
  }
  
  .prose a {
    @apply text-teal-600 hover:text-teal-700 underline;
  }
  
  .prose strong {
    @apply font-semibold text-slate-700;
  }
  
  .prose em {
    @apply italic;
  }
  
  .prose table {
    @apply w-full border-collapse border border-slate-300 mb-6;
  }
  
  .prose th {
    @apply border border-slate-300 bg-slate-100 px-4 py-2 text-left font-semibold text-slate-700;
  }
  
  .prose td {
    @apply border border-slate-300 px-4 py-2 text-slate-600;
  }
</style>