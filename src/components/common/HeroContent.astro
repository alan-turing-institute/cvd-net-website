---
import Button from "@ui/Button.astro";

const title = "Networks of Cardiovascular Digital Twins (CVD-Net)";
const subTitle =
  "Pioneering personalised cardiovascular care through interconnected digital twins";
// TODO: Add Hero Image placeholder (_being developed_)
const primaryCTA = { text: "Find Out More", href: "/about/project-overview" }; // Changed from secondary
const secondaryCTA = { text: "Contact Us", href: "/about/contact" }; // Changed from primary
---

{/* Hero Content */}
<div class="mx-auto max-w-4xl select-none text-left sm:text-center">
  <h1
    class="block text-balance text-4xl text-slate-800 sm:text-5xl md:text-6xl lg:text-7xl"
  >
    {title}
  </h1>
</div>

<div class="mx-auto max-w-3xl text-left sm:text-center">
  <p class="text-pretty text-lg text-slate-700">
    {subTitle}
  </p>
</div>

{/* CTA Buttons */}
<div class="flex flex-col justify-center gap-5 sm:flex-row">
  {/* Note: Swapped primary/secondary variants to match the variable renaming */}
  <Button href={primaryCTA.href} variant="primary">{primaryCTA.text}</Button>
  <Button href={secondaryCTA.href} variant="secondary">{secondaryCTA.text}</Button>
</div>
