---
import BaseLayout from "../../layout/BaseLayout.astro";

const pageTitle = "Contact Us | CVD-Net";
const pageDescription =
	"Get in touch with the CVD-Net project team via email or connect with us on social media.";

// TODO: Replace with actual email address
const imperialEmail = "m.khanum@imperial.ac.uk";
const turingEmail = "kdecesare@turing.ac.uk";

// TODO: Define actual social media URLs and potentially add specific icons if available
const socialLinks = [
	{ name: "LinkedIn", url: "#", icon: "world" }, // Using 'world' as a generic placeholder icon
	{ name: "GitHub", url: "#", icon: "code" }, // No 'code' icon, using text for now
];
---

<BaseLayout seo={{ title: pageTitle, description: pageDescription }}>
	<div class="container mx-auto px-4 py-12">
		<h1
			class="mb-8 text-center text-4xl font-bold text-gray-800 dark:text-white"
		>
			Contact Us
		</h1>

		<div
			class="mx-auto max-w-2xl rounded-lg bg-white p-8 shadow-md dark:bg-gray-800"
		>
			<h2
				class="mb-4 text-2xl font-semibold text-gray-700 dark:text-gray-300"
			>
				Get in Touch
			</h2>
			<p class="mb-6 text-gray-600 dark:text-gray-400">
				For inquiries about the CVD-Net project, please contact our
				project management team: Mojiba Khanum:
				<a
					href={`mailto:${imperialEmail}`}
					class="break-words text-blue-600 hover:underline dark:text-blue-400"
				>
					{imperialEmail}
				</a>
				<!-- TODO: Confirm and replace placeholder email address -->
			</p>

			<h2
				class="mb-4 border-t border-gray-200 pt-6 text-2xl font-semibold text-gray-700 dark:border-gray-700 dark:text-gray-300"
			>
				Follow Us
			</h2>
			<p class="mb-4 text-gray-600 dark:text-gray-400">
				Connect with the project on social media (links coming soon):
				<!-- TODO: Update social media links and icons -->
			</p>
			<div class="flex space-x-4">
				{
					socialLinks.map((link) => (
						<a
							href={link.url}
							target="_blank"
							rel="noopener noreferrer"
							class="flex items-center space-x-1 text-gray-600 hover:text-blue-600 dark:text-gray-400 dark:hover:text-blue-400"
							aria-label={`Visit CVD-Net on ${link.name}`}
						>
							{/* Conditionally render icon if one exists, otherwise just text */}
							{/* {link.icon && <Icon name={link.icon} class="size-5" />} */}
							<span>{link.name}</span>
						</a>
					))
				}
			</div>
		</div>
	</div>
</BaseLayout>
