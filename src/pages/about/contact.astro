	{ name: "LinkedIn", url: "#", icon: "mdi:linkedin" },
	{
		name: "GitHub",
		url: "https://github.com/alan-turing-institute/cvd-net-website",
		icon: "mdi:github",
	},
];
*/

const keyContacts = [
	{
		name: "Mojiba Khanum",
		role: "General Enquiries",
		affiliation: "Imperial College London",
		email: imperialEmail,
		photoUrl: "/images/team/mojiba-khanum.jpg", // Path to image in /public
	},
	{
		name: "Karen de Cesare",
		role: "Alan Turing Institute Enquiries",
		affiliation: "The Alan Turing Institute",
		email: turingEmail,
		photoUrl: "/images/team/karen-de-cesare.jpg", // Path to image in /public
	},
];
---

<BaseLayout seo={{ title: pageTitle, description: pageDescription }}>
	<div class="container mx-auto max-w-6xl px-4 py-16 lg:py-20">
		<header class="mb-12 text-center">
			<h1 class="text-4xl font-bold text-slate-800 sm:text-5xl">
				Contact Us
			</h1>
			<p class="mx-auto mt-4 max-w-3xl text-lg text-slate-600">
				We'd love to hear from you. Please use the email addresses below
				for general project enquiries.
			</p>
		</header>

		<!-- Key Contacts Section -->
		<section class="mb-16">
			<div
				class="mx-auto grid max-w-4xl grid-cols-1 gap-8 md:grid-cols-2"
			>
				{
					keyContacts.map((contact) => (
						<div class="flex flex-col rounded-lg border border-slate-200 bg-white p-6 shadow-sm transition-all hover:shadow-md">
							<div class="mb-6 flex items-center gap-4">
								{" "}
								{/* Increased bottom margin */}
								<img
									src={contact.photoUrl}
									alt={`Photo of ${contact.name}`}
									class="size-20 flex-shrink-0 rounded-full border-2 border-slate-100 object-cover"
									width="80"
									height="80"
									loading="lazy"
								/>
								<div class="flex-grow">
									<h3 class="text-xl font-semibold text-slate-800">
										{contact.name}
									</h3>
									<p class="text-sm text-slate-500">
										{contact.affiliation}
									</p>
									<p class="mt-1 text-sm text-slate-600">
										{contact.role}
									</p>
								</div>
							</div>
							<a
								href={`mailto:${contact.email}`}
								class="mt-auto inline-flex items-center justify-center gap-2 rounded-md bg-teal-50 px-4 py-3 text-sm font-medium text-teal-700 transition-colors hover:bg-teal-100 focus:ring-2 focus:ring-teal-500 focus:ring-offset-2 focus:outline-none"
							>
								<Icon name="mdi:email-outline" class="size-5" />
								<span>Send Email</span>{" "}
								{/* Email to First Name */}
							</a>
						</div>
					))
				}
			</div>
		</section>

		<!-- Social Media Section -->
		<section class="border-t border-slate-200 pt-16">
			<h2 class="mb-6 text-center text-3xl font-semibold text-slate-700">
				Follow Us
			</h2>
			<p class="mb-8 text-center text-slate-600">
				Connect with the CVD-Net project on social media.
				<br />
				<span class="text-sm italic">(Links coming soon!)</span>
			</p>
			<!--
			<div class="flex flex-wrap justify-center gap-6">
				{
					socialLinks.map((link) => (
						<a
							href={link.url}
							target={link.url === "#" ? "_self" : "_blank"}
							rel="noopener noreferrer"
							class="group flex flex-col items-center gap-2 rounded-lg p-4 text-slate-600 transition-all w-32 hover:bg-slate-100 hover:text-teal-700 focus:bg-slate-100 focus:text-teal-700 focus:outline-none"
							aria-label={`Visit CVD-Net on ${link.name}`}
						>
							<Icon name={link.icon} class="size-8 transition-transform group-hover:scale-110" />
							<span class="text-sm font-medium">{link.name}</span>
						</a>
					))
				}
			</div>
			-->
		</section>
	</div>
</BaseLayout>
