---
import BaseLayout from "../../layout/BaseLayout.astro";
import Icon from "../../components/ui/icons/Icon.astro";
// import { Image } from "astro:assets"; // Only needed if images are in src/assets and need optimization

const pageTitle = "Contact Us | CVD-Net";
const pageDescription =
	"Get in touch with the CVD-Net project team via email. Social media links will be available soon.";

const imperialEmail = "m.khanum@imperial.ac.uk";
const turingEmail = "kdecesare@turing.ac.uk";

// Social links definition (kept for when they are ready)
// Commented out to avoid TypeScript warning as these aren't used yet
/* 
