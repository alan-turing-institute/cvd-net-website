---
import BaseLayout from "../../layout/BaseLayout.astro";

// Resource data - dynamically gathering information about our resources
const resources = [
	{
		title: "ModularCirc",
		slug: "modularcirc",
		description:
			"A modular software toolkit for creating simulations of the heart and circulatory system, providing a simplified yet powerful approach to cardiovascular modeling.",
		image: "/images/modularcirc.jpeg",
		badges: [
			{
				text: "GitHub",
				url: "https://github.com/alan-turing-institute/ModularCirc",
				img: "https://img.shields.io/badge/GitHub-ModularCirc-blue?logo=github",
			},
			{
				text: "PyPI",
				url: "https://pypi.org/project/ModularCirc",
				img: "https://img.shields.io/pypi/v/ModularCirc",
			},
		],
	},
	{
		title: "Data Safe Haven",
		slug: "data-safe-haven",
		description:
			"A secure research environment with technical and process controls for safe data access, allowing researchers to work securely with sensitive patient data.",
		image: "/images/data-safe-haven.jpg",
		badges: [
			{
				text: "GitHub",
				url: "https://github.com/alan-turing-institute/data-safe-haven",
				img: "https://img.shields.io/badge/GitHub-Data_Safe_Haven-blue?logo=github",
			},
			{
				text: "Documentation",
				url: "https://data-safe-haven.readthedocs.io",
				img: "https://readthedocs.org/projects/data-safe-haven/badge/?version=latest",
			},
		],
	},
	{
		title: "TEA Platform",
		slug: "tea-platform",
		description:
			"The Trustworthy and Ethical Assurance platform helps researchers demonstrate that data-driven technologies uphold important ethical principles throughout their lifecycle.",
		image: "/images/tea-platform.png",
		badges: [
			{
				text: "GitHub",
				url: "https://github.com/alan-turing-institute/AssurancePlatform",
				img: "https://img.shields.io/badge/GitHub-TEA_Platform-blue?logo=github",
			},
			{
				text: "Website",
				url: "https://assuranceplatform.azurewebsites.net/",
				img: "https://img.shields.io/badge/Go%20to%20the%20TEA%20Platform-0F76B8?style=flat",
			},
		],
	},
];

const seo = {
	title: "Resources | CVD-Net",
	description:
		"Resources developed by the CVD-Net project, including ModularCirc, Data Safe Haven, and the TEA Platform.",
};
---

<BaseLayout seo={seo}>
	<div class="container mx-auto max-w-6xl px-4 py-12">
		<div class="mx-auto mb-12 max-w-4xl text-center">
			<h1 class="mb-4 text-4xl font-bold text-slate-800 lg:text-5xl">
				Resources
			</h1>
			<p class="mx-auto mb-8 max-w-3xl text-lg text-slate-600">
				CVD-Net is developing a range of open-source tools and platforms
				to support cardiovascular research and digital twin development.
				Explore our project resources below.
			</p>
		</div>

		<div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
			{
				resources.map((resource) => (
					<div class="group flex h-full flex-col overflow-hidden rounded-lg border border-slate-200 bg-white shadow-sm transition-all hover:shadow-md">
						<div class="relative aspect-video overflow-hidden">
							<img
								src={`${import.meta.env.BASE_URL}${resource.image}`}
								alt={`${resource.title} illustration`}
								class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105"
							/>
						</div>
						<div class="flex flex-1 flex-col p-6">
							<div class="mb-3 flex flex-wrap gap-2">
								{resource.badges.map((badge) => (
									<a
										href={badge.url}
										target="_blank"
										rel="noopener noreferrer"
									>
										<img src={badge.img} alt={badge.text} />
									</a>
								))}
							</div>

							<h2 class="mb-2 text-2xl font-semibold text-slate-800">
								{resource.title}
							</h2>
							<p class="mb-4 flex-1 text-slate-600">
								{resource.description}
							</p>

							<a
								href={`${import.meta.env.BASE_URL}/resources/${resource.slug}`}
								class="inline-flex items-center justify-center rounded-md bg-teal-600 px-4 py-2 text-sm font-medium text-white shadow transition-colors hover:bg-teal-700 focus:ring-2 focus:ring-teal-500/40 focus:outline-none"
							>
								Learn more
							</a>
						</div>
					</div>
				))
			}
		</div>
	</div>
</BaseLayout>
