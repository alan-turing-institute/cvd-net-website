---
import BaseLayout from '../../layout/BaseLayout.astro';

const seo = {
  title: 'Resources | CVD-Net',
  description: 'Resources developed by the CVD-Net project, including ModularCirc, Data Safe Haven, and the TEA Platform.',
};
---
<!-- TODO: Content needed for resource pages. -->
<BaseLayout seo={seo}>
  <section class="container py-16 lg:py-20">
    <div class="mx-auto max-w-3xl text-center">
      <h1 class="mb-4 text-4xl font-bold lg:text-5xl">Resources</h1>
      <p class="mb-8 text-lg text-foreground/80">
        Detailed information about project resources will be available here soon.
      </p>
    </div>
    <div class="mx-auto max-w-2xl">
      <h2 class="mb-4 text-2xl font-semibold">Planned Resources:</h2>
      <ul class="list-disc space-y-2 pl-5 text-lg">
        <li>
          <a href="/resources/modularcirc" class="text-primary hover:underline">ModularCirc</a>
        </li>
        <li>
          <a href="/resources/data-safe-haven" class="text-primary hover:underline">Data Safe Haven</a>
        </li>
        <li>
          <a href="/resources/tea-platform" class="text-primary hover:underline">TEA Platform</a>
        </li>
      </ul>
    </div>
  </section>
</BaseLayout>